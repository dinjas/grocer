You bought the following items on <%= @basket.date.localtime.strftime('%A, %d %b %Y %l:%M %p') %>
</br></br>

<table class="table">
  <tr>
    <th>Item</th>
    <th>Unit Price</th>
    <th>Qty</th>
    <th>Total Price</th>
  </tr>
  <% @basket.line_items.each do |li| %>
    <tr>
      <td> <%= li.product.name %> </td>
      <td> <%= number_to_currency(li.price) %> </td>
      <td>
        <% if li.quantity % 1 == 0 %>
          <%= li.quantity.floor %>
        <% else %>
          <%= li.quantity %> lb
          <% end %>
      </td>
      <td> <%= number_to_currency(li.price * li.quantity) %> </td>
    </tr>
  <% end %>
    <tr>
      <td><strong>Total:</strong></td>
      <td></td>
      <td></td>
      <td><strong><%= number_to_currency(@basket.total) %></strong></td>
</table>
