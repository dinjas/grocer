<% if current_user && !@products.empty? %>
  <p> You have purchased the following products: </p>
  <table id="productsTable" class="tablesorter table">
    <thead>
      <tr class="fake-link">
        <th>Product</th>
        <th>Total Purchased</th>
        <th>Highest Price</th>
        <th>Lowest Price</th>
        <th>Most Recently Purchased</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td> <%= link_to product.name, product_path(product) %> </td>
          <td> <%= product.times_bought.to_i %> </td>
          <td> <%= number_to_currency(product.highest_price) %> </td>
          <td> <%= number_to_currency(product.lowest_price) %> </td>
          <td> <%= product.most_recently_purchased.localtime.strftime('%A, %d %b %Y %l:%M %p') %> </td>
        </tr>
      <% end %>
    </tbody>
    </table>
  <% elsif current_user && @products.empty?%>
    <p> You currently have no products. Load your purchase history to generate a list of your products.</p>
  <% end %>
